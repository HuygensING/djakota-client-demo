@import url("http://fonts.googleapis.com/css?family=Merriweather\+Sans:300,300italic,700,700italic");

html, body
	background-color #fff
	font-family sans-serif
	font-size 16px
	margin 0
	padding 0
	font-family 'Merriweather Sans', sans-serif
	font-weight 300
	line-height 1.5em
	color #333
	height 100%

html 
	box-sizing border-box

*, *:before, *:after 
	box-sizing inherit

.app
	height 100%
	width 100%
	padding 0
	margin 0
	overflow hidden	

.hire-djakota-client
	background-color #000
	height calc(100% - 80px)

.hire-zoom-bar, .hire-djakota-minimap
	vertical-align middle
	display: inline-block
	height 80px
	width 120px

.hire-fill-button
	margin-top 20px

.hire-djakota-minimap
	position relative
	top -20px
	height 100px